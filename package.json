{
  "name": "tanager",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:in:dev": "cross-env NODE_ENV=development nest start inbound --watch",
    "start:out:dev": "cross-env NODE_ENV=development nest start outbound --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/tanager/main",
    "start:in:prod": "node dist/apps/inbound/main",
    "start:out:prod": "node dist/apps/outbound/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=development jest --config ./apps/tanager/test/jest-e2e.json",
    "test:in:e2e": "cross-env NODE_ENV=development jest --config ./apps/inbound/test/jest-e2e.json",
    "test:out:e2e": "cross-env NODE_ENV=development jest --config ./apps/outbound/test/jest-e2e.json",
    "test:in:controller": "cross-env NODE_ENV=development yarn test ./apps/inbound/src/inbound.controller",
    "test:out:controller": "cross-env NODE_ENV=development yarn test ./apps/outbound/src/outbound.controller"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.6",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^11.1.14",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.14",
    "@nestjs/microservices": "^11.1.14",
    "@nestjs/platform-express": "^11.1.14",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "firebase-admin": "^13.6.1",
    "parse-url": "^9.2.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "run-script-webpack-plugin": "^0.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "webpack": "^5.105.2",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "node-forge": ">=1.3.2",
    "qs": ">=6.14.2",
    "formidable": ">=3.5.3",
    "lodash": ">=4.17.23",
    "@babel/helpers": ">=7.26.10",
    "@eslint/plugin-kit": ">=0.3.4",
    "brace-expansion": ">=1.1.12",
    "diff": ">=4.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/src/common/$1",
      "^@app/exception(|/.*)$": "<rootDir>/libs/src/exception/$1",
      "^@app/commons(|/.*)$": "<rootDir>/libs/commons/src/$1",
      "^@app/exceptions(|/.*)$": "<rootDir>/libs/exceptions/src/$1",
      "^@app/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1"
    }
  }
}
